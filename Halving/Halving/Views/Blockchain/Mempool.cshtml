@model List<Halving.Models.Transaction>
@{
    ViewData["Title"] = "Mempool - Pending Transactions";
}

<h1>Mempool - Pending Transactions</h1>

<p><a href="@Url.Action("Index")">‚Üê Back to Blockchain</a></p>

@if (Model.Count == 0)
{
    <div style="padding: 20px; background: #f8f9fa; border-radius: 8px; text-align: center;">
        <p style="font-size: 1.2em; color: #666;">No pending transactions in mempool</p>
    </div>
}
else
{
    <div style="margin-bottom: 20px;">
        <strong>Total Pending Transactions:</strong> @Model.Count
    </div>

    @foreach (var tx in Model)
    {
        <div style="background: #f8f9fa; border-left: 4px solid #007bff; padding: 15px; margin-bottom: 15px; border-radius: 4px;">
            <div style="margin: 5px 0;">
                <strong>From:</strong> <span style="font-family: monospace;">@tx.FromAddress</span>
            </div>
            <div style="margin: 5px 0;">
                <strong>To:</strong> <span style="font-family: monospace;">@tx.ToAddress</span>
            </div>
            <div style="margin: 5px 0;">
                <strong>Amount:</strong> <span style="color: #28a745; font-weight: bold;">@tx.Amount coins</span>
            </div>
            @if (tx.Fee > 0)
            {
                <div style="margin: 5px 0;">
                    <strong>Fee:</strong> @tx.Fee coins
                </div>
            }
            @if (!string.IsNullOrEmpty(tx.Note))
            {
                <div style="margin: 5px 0;">
                    <strong>Note:</strong> <em>@tx.Note</em>
                </div>
            }
        </div>
    }
}
