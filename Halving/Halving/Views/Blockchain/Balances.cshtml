@model Dictionary<string, decimal>
@{
    ViewData["Title"] = "Account Balances";
}

<h1>Account Balances</h1>

<p><a href="@Url.Action("Index")">‚Üê Back to Blockchain</a></p>

@if (Model.Count == 0)
{
    <div style="padding: 20px; background: #f8f9fa; border-radius: 8px; text-align: center;">
        <p style="font-size: 1.2em; color: #666;">No accounts with balances yet</p>
    </div>
}
else
{
    <div style="margin-bottom: 20px;">
        <strong>Total Accounts:</strong> @Model.Count
    </div>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background: #007bff; color: white;">
                <th style="padding: 12px; text-align: left; border: 1px solid #dee2e6;">Address</th>
                <th style="padding: 12px; text-align: right; border: 1px solid #dee2e6;">Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.OrderByDescending(a => a.Value))
            {
                <tr style="background: white;">
                    <td style="padding: 10px; border: 1px solid #dee2e6; font-family: monospace;">@account.Key</td>
                    <td style="padding: 10px; border: 1px solid #dee2e6; text-align: right; font-weight: bold; color: @(account.Value >= 0 ? "#28a745" : "#dc3545");">
                        @account.Value coins
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
