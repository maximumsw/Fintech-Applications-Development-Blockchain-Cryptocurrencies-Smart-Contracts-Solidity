@{
    ViewBag.Title = "Покласти у PenaltyStaking";
}

<h2>Покласти у PenaltyStaking</h2>

<p><b>Адреса контракту:</b> @ViewBag.ContractAddress</p>

@if (TempData["Msg"] != null)
{
    <div style="color:blue">@TempData["Msg"]</div>
}

<form method="post">
    <label>Адреса гаманця (FromAddress):</label><br />
    <input type="text" name="fromAddress" required /><br /><br />

    <label>Сума (Amount):</label><br />
    <input type="number" name="amount" step="0.0001" required /><br /><br />

    <label>Комісія (Fee):</label><br />
    <input type="number" name="fee" step="0.0001" required /><br /><br />

    <label>Private Key:</label><br />
    <input type="text" name="privateKey" required /><br /><br />

    <button type="submit">Покласти</button>
</form>