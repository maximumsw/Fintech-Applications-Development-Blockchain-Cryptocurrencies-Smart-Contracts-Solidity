@using Smart_Contracts.Services
@{
    ViewData["Title"] = "BlockChain Explorer";
    var blockChain = (BlockChainService)ViewBag.BlockChain;
}

<div class="container mt-4">
    <h1>BlockChain Explorer</h1>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Chain Information</h5>
                    <p><strong>Total Blocks:</strong> @blockChain.Chain.Count</p>
                    <p><strong>Pending Transactions:</strong> @blockChain.PendingTransactions.Count</p>
                    <p><strong>Difficulty:</strong> @blockChain.Difficulty</p>
                    <p><strong>Chain Valid:</strong> @(blockChain.IsChainValid() ? "✓ Yes" : "✗ No")</p>

                    <form method="post" asp-action="MineBlock" class="mt-3">
                        <div class="input-group">
                            <input type="text" name="minerAddress" class="form-control" placeholder="Miner address (optional)" />
                            <button type="submit" class="btn btn-primary">Mine Pending Transactions</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Blocks</h3>
            @foreach (var block in blockChain.Chain.OrderByDescending(b => b.Index))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Block #@block.Index</strong>
                        <span class="float-end text-muted">
                            @DateTimeOffset.FromUnixTimeSeconds(block.Timestamp).ToString("yyyy-MM-dd HH:mm:ss")
                        </span>
                    </div>
                    <div class="card-body">
                        <p><strong>Hash:</strong> <code>@block.Hash</code></p>
                        <p><strong>Previous Hash:</strong> <code>@block.PreviousHash</code></p>
                        <p><strong>Nonce:</strong> @block.Nonce</p>
                        <p><strong>Transactions:</strong> @block.Transactions.Count</p>

                        @if (block.Transactions.Any())
                        {
                            <table class="table table-sm mt-2">
                                <thead>
                                    <tr>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tx in block.Transactions)
                                    {
                                        <tr>
                                            <td>@(string.IsNullOrEmpty(tx.FromAddress) ? "[Mining Reward]" : tx.FromAddress)</td>
                                            <td>@tx.ToAddress</td>
                                            <td>@tx.Amount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
