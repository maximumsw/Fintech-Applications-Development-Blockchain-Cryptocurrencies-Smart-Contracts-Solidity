@model List<Halving2.ViewModels.WalletViewModel>
@{
    ViewData["Title"] = "Wallets";
}

<div class="container mt-4">
    <h1 class="mb-4">Wallets</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Blockchain</a></li>
            <li class="breadcrumb-item active" aria-current="page">Wallets</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Summary</h5>
            <p class="mb-0"><strong>Total Wallets:</strong> @Model.Count</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Wallets</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Address</th>
                            <th>Confirmed Balance</th>
                            <th>Total Balance (incl. Pending)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wallet in Model)
                        {
                            var hasPending = wallet.TotalBalance != wallet.ConfirmedBalance;
                            <tr>
                                <td>
                                    <a href="@Url.Action("WalletHistory", new { address = wallet.Address })" class="fw-bold">
                                        @wallet.Address
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-success">@wallet.ConfirmedBalance.ToString("F2")</span>
                                </td>
                                <td>
                                    @if (hasPending)
                                    {
                                        <span class="badge bg-warning text-dark">@wallet.TotalBalance.ToString("F2")</span>
                                        <small class="text-muted">(pending txs)</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@wallet.TotalBalance.ToString("F2")</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("WalletHistory", new { address = wallet.Address })" class="btn btn-sm btn-outline-primary">
                                        View History
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count == 0)
            {
                <p class="text-muted text-center">No wallets found.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Blockchain</a>
        <a href="@Url.Action("CreateTransaction")" class="btn btn-primary">Create Transaction</a>
    </div>
</div>
