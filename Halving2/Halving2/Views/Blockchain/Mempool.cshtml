@model List<Halving2.Models.Transaction>
@{
    ViewData["Title"] = "Mempool";
}

<div class="container mt-4">
    <h1 class="mb-4">Transaction Mempool</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Blockchain</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mempool</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Mempool Statistics</h5>
            <p><strong>Pending Transactions:</strong> @Model.Count</p>
            <p><strong>Total Fees:</strong> @Model.Sum(t => t.Fee).ToString("F2")</p>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Pending Transactions</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Amount</th>
                                <th>Fee</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var tx = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <a href="@Url.Action("WalletHistory", new { address = tx.FromAddress })">@tx.FromAddress</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("WalletHistory", new { address = tx.ToAddress })">@tx.ToAddress</a>
                                    </td>
                                    <td><strong>@tx.Amount.ToString("F2")</strong></td>
                                    <td>@tx.Fee.ToString("F2")</td>
                                    <td>@(tx.Note ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Mine")" class="btn btn-success">Mine These Transactions</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Blockchain</a>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <strong>Mempool is empty!</strong> There are no pending transactions waiting to be mined.
        </div>

        <div class="mt-3">
            <a href="@Url.Action("CreateTransaction")" class="btn btn-primary">Create Transaction</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Blockchain</a>
        </div>
    }
</div>
