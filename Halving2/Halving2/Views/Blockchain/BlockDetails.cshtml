@model Halving2.ViewModels.BlockDetailsViewModel
@{
    ViewData["Title"] = $"Block #{Model.Block.Height}";
}

<div class="container mt-4">
    <h1 class="mb-4">Block #@Model.Block.Height Details</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Blockchain</a></li>
            <li class="breadcrumb-item active" aria-current="page">Block #@Model.Block.Height</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Block Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Height:</strong> @Model.Block.Height</p>
                    <p><strong>Timestamp:</strong> @Model.Block.Timestamp.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
                    <p><strong>Confirmations:</strong> <span class="badge bg-success">@Model.Confirmations</span></p>
                    <p><strong>Difficulty:</strong> @Model.Block.Difficulty</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Nonce:</strong> @Model.Block.Nonce</p>
                    <p><strong>Mining Duration:</strong> @Model.Block.MiningDurationMs ms</p>
                    <p><strong>Transaction Count:</strong> @Model.Block.Transactions.Count</p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12">
                    <p><strong>Hash:</strong></p>
                    <code class="d-block p-2 bg-light">@Model.Block.Hash</code>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12">
                    <p><strong>Previous Hash:</strong></p>
                    <code class="d-block p-2 bg-light">@Model.Block.PreviousHash</code>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Transactions in this Block</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Amount</th>
                            <th>Fee</th>
                            <th>Note</th>
                            <th>Confirmations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Block.Transactions.Count; i++)
                        {
                            var tx = Model.Block.Transactions[i];
                            var isCoinbase = tx.FromAddress == "COINBASE" || tx.FromAddress == "GENESIS";
                            <tr class="@(isCoinbase ? "table-success" : "")">
                                <td>@(i + 1)</td>
                                <td>
                                    @if (isCoinbase)
                                    {
                                        <span class="badge bg-warning text-dark">@tx.FromAddress</span>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("WalletHistory", new { address = tx.FromAddress })">@tx.FromAddress</a>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("WalletHistory", new { address = tx.ToAddress })">@tx.ToAddress</a>
                                </td>
                                <td><strong>@tx.Amount.ToString("F2")</strong></td>
                                <td>@tx.Fee.ToString("F2")</td>
                                <td>@(tx.Note ?? "-")</td>
                                <td>
                                    <span class="badge bg-success">@Model.Confirmations</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Block.Transactions.Count == 0)
            {
                <p class="text-muted text-center">No transactions in this block.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Blockchain</a>
    </div>
</div>
